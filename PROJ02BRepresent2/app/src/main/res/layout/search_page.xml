<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/liberty"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    android:paddingTop="10dp"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_gravity="center"
        android:background="#AA1428"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMarginStart="90dp"
        app:titleTextAppearance="@style/Toolbar.TitleText"></android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/responseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:fontFamily="@font/abrilfont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toBottomOf="@+id/responseView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/responseView"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:id="@+id/sen1layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/responseView">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/senator1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/responseView" />

                    <TextView
                        android:id="@+id/sen1_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/senator1"
                        android:autoLink="web"
                        android:textColorLink="#FFFCFC"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/contact1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#1C90C6"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:text="Contact"
                            app:layout_constraintRight_toLeftOf="@+id/more1"
                            app:layout_constraintTop_toBottomOf="@+id/sen1layout" />

                        <Button
                            android:id="@+id/more1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#1C90C6"
                            android:layout_weight="1"
                            android:text="More!"
                            app:layout_constraintLeft_toRightOf="@+id/contact1"
                            app:layout_constraintTop_toBottomOf="@+id/sen1layout" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sen2layout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/senator2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintTop_toBottomOf="@+id/senator1" />

                    <TextView
                        android:id="@+id/sen2_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/senator2"
                        android:autoLink="web"
                        android:textColorLink="#FFFCFC"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/contact2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact"
                            android:background="#1C90C6"
                            app:layout_constraintRight_toLeftOf="@+id/more2"
                            app:layout_constraintTop_toBottomOf="@+id/sen2layout"
                            android:layout_marginRight="10dp"
                            />

                        <Button
                            android:id="@+id/more2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="More!"
                            android:background="#1C90C6"
                            app:layout_constraintLeft_toRightOf="@+id/contact2"
                            app:layout_constraintTop_toBottomOf="@+id/sen2layout" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/houselayout1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/houseimage1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintTop_toBottomOf="@+id/senator1" />

                    <TextView
                        android:id="@+id/house1_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/house1"
                        android:autoLink="web"
                        android:textColorLink="#FFFCFC"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/house_contact1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact"
                            android:background="#1C90C6"
                            app:layout_constraintRight_toLeftOf="@+id/house_more1"
                            app:layout_constraintTop_toBottomOf="@+id/house1_website"
                            android:layout_marginRight="10dp"
                            />

                        <Button
                            android:id="@+id/house_more1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="More!"
                            android:background="#1C90C6"
                            app:layout_constraintLeft_toRightOf="@+id/house_contact1"
                            app:layout_constraintTop_toBottomOf="@+id/house1_website" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/houselayout2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                >

                <ImageView
                    android:id="@+id/houseimage2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintTop_toBottomOf="@+id/house1" />

                    <TextView
                        android:id="@+id/house2_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/house2"
                        android:autoLink="web"
                        android:textColorLink="#FFFCFC"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/house_contact2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact"
                            android:background="#1C90C6"
                            app:layout_constraintRight_toLeftOf="@+id/house_more2"
                            app:layout_constraintTop_toBottomOf="@+id/house2_website"
                            android:layout_marginRight="10dp"
                            />

                        <Button
                            android:id="@+id/house_more2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="More!"
                            android:background="#1C90C6"
                            app:layout_constraintLeft_toRightOf="@+id/house_contact2"
                            app:layout_constraintTop_toBottomOf="@+id/house2_website"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/houselayout3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/houseimage3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/house3"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintTop_toBottomOf="@+id/house2" />
                    <TextView
                        android:id="@+id/house3_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"
                        android:textColor="#FFFCFC"
                        android:textColorHint="#FFFCFC"
                        android:textSize="20sp"
                        app:fontFamily="@font/abrilfont"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/house3"
                        android:autoLink="web"
                        android:textColorLink="#FFFCFC"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:background="#1C90C6"
                            android:id="@+id/house_contact3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contact"
                            app:layout_constraintRight_toLeftOf="@+id/house_more3"
                            app:layout_constraintTop_toBottomOf="@+id/house3_website"
                            android:layout_marginRight="10dp"
                            />

                        <Button
                            android:id="@+id/house_more3"
                            android:layout_width="match_parent"
                            android:background="#1C90C6"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="More!"
                            app:layout_constraintRight_toLeftOf="@+id/house_contact33"
                            app:layout_constraintTop_toBottomOf="@+id/house3_website"
                             />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    </android.support.constraint.ConstraintLayout>